<component name="sendloop-subscriber" type="synapse/template">
    <subComponents>
        <component name="subscribe">
            <file>subscribe.xml</file>
            <description>Subscribe an email address to one of the lists.</description>
        </component>
        <component name="unsubscribe">
            <file>unsubscribe.xml</file>
            <description>Unsubscribe an email address from your lists</description>
        </component>
        <component name="updateSubscriber">
            <file>updateSubscriber.xml</file>
            <description>Update subscriber information.</description>
        </component>
        <component name="searchSubscriber">
            <file>searchSubscriber.xml</file>
            <description>Makes a search on your subscriber lists for a specific email address.</description>
        </component>
        <component name="getSubscriber">
            <file>getSubscriber.xml</file>
            <description>Returns the subscriber information.</description>
        </component>
        <component name="listSubscribers">
            <file>listSubscribers.xml</file>
            <description>Returns the list of subscribers for a specific list and segment.</description>
        </component>
    </subComponents>
</component>